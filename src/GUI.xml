<RootElement>
    <TreeRenderElement />
    
    <Container Layout="MenuLayout(60)" Colour="ColourF(0.208, 0.216, 0.224)">
        <Property Name="LayoutManager" Value="XSpacerLayout()"/>
        
        <Button Layout="TextLayout(5, 5, 0, 0, 0.2, 1.4, true)" Click="AddNode()">
            <Property Name="Colour" Value="ColourF(0.667, 0.753, 0.89)" />
            <Property Name="BorderColour" Value="ColourF(0.51, 0.557, 0.694)" />
            Add
        </Button>
        
        <Button Layout="TextLayout(5, 5, 0, 0, 0.2, 1.4, true)" Click="DeleteNode()">
            <Property Name="Colour" Value="ColourF(0.667, 0.753, 0.89)" />
            <Property Name="BorderColour" Value="ColourF(0.51, 0.557, 0.694)" />
            Delete
        </Button>
        
        <TextInput Layout="TextLayout(5, 5, 0, 0, 0.2, 0, true)">
            <Property Name="TextSize" Value="30" />
            <Property Name="CornerRadius" Value="0.2" />
            <Property Name="BackgroundColour" Value="ColourF(0, 0, 0)" />
            <Property Name="SingleLine" Value="true" />
            Look at ME!
        </TextInput>
        
        <Button Layout="TextLayout(5, 5, 0, 0, 0.2, 1.4, true)" Click="FindNode()">
            <Property Name="Colour" Value="ColourF(0.667, 0.753, 0.89)" />
            <Property Name="BorderColour" Value="ColourF(0.51, 0.557, 0.694)" />
            Find
        </Button>
        
        <Button Layout="TextLayout(5, 5, 0, 0, 0.2, 1.4, true)" Click="ClearTree()">
            <Property Name="Colour" Value="ColourF(0.667, 0.753, 0.89)" />
            <Property Name="BorderColour" Value="ColourF(0.51, 0.557, 0.694)" />
            Clear
        </Button>
        
    </Container>
</RootElement>